<% layout("/layouts/boilerplates") %>
<div class="row">
    <div class="col-8 offset-2">
        <!-- <br /><br /> -->

    

    <h3 class="mb-4">Create a new Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
        <div class="valid-feedback">Title looks good!</div>
        </div>
        <div class="mb-3">
            <lable for="Description" class="form-label">Description</lable>
            <textarea name="listing[description]" class="form-control" required></textarea>
            <div class="invalid-feedback">please enter a short Description</div>

        </div>
        

        <div class="mb-3">
            <lable for="image[url]" class="form-label" class="form-label">Upload Listing Image</lable>
            <input name="listing[image]"  type="file" class="form-control" required>

        </div>
        <div class="row">
          <div class=col-md-6 mb-3>
            <lable for="price" class="form-label" class="form-label">price</lable>
            <input name="listing[price]" placeholder="1200"  class="form-control" required>
            <div class="invalid-feedback">price should be valid</div>
        </div>
        <div class=col-md-6 mb-3>
            <lable for="country" class="form-label" >country</lable>
            <input name="listing[country]" placeholder="India" type="text" 
            class="form-control" required>
            <div class="invalid-feedback">country name should be valid</div>

        </div>
        <div class="mb-3">
            <lable for="location" class="form-label" >Location</lable>
            <input name="listing[location]" placeholder="kolkata, jaipur, pune, mumbai" type="text" class="form-control" required>
            <div class="invalid-feedback">location should be valid</div>
        </div>
        
        
        <br /><br />
        <div class="mb-3">
            <button class="btn add-btn w-100">Add</button>
          </div>
         
        <br /><br />
        

    </form>
</div>
</div>
